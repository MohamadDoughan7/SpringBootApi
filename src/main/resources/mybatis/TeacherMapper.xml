<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.teacher.TeacherMapper">

  <resultMap id="teacherResultMap" type="com.example.demo.teacher.Teacher">
    <id property="id" column="id" />
    <result property="name" column="name" />
    <result property="dob" column="dob" />
    <result property="email" column="email" />
    <result property="subject" column="subject" />
  </resultMap>

  <select id="getAllTeachers" resultMap="teacherResultMap">
    SELECT *
    FROM teachers
  </select>

  <select id="findById" resultMap="teacherResultMap" parameterType="java.lang.Long">
    SELECT *
    FROM students
    WHERE id = #{id}
  </select>

  <select id="findTeacherByEmail" resultMap="teacherResultMap" parameterType="java.lang.String">
    SELECT *
    FROM teachers
    WHERE email = #{email}
  </select>

  <insert id="insertTeacher" parameterType="com.example.demo.teacher.Teacher" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO teachers
    (
    name,
    dob,
    email,
    subject
    )
    VALUES
    (
    #{name},
    #{dob},
    #{email},
    #{subject}
    )
  </insert>

  <update id="updateTeacher" parameterType="com.example.demo.teacher.Teacher">
    UPDATE teachers
    SET
    name = #{name},
    dob = #{dob},
    email = #{email}
    WHERE id = #{id}
  </update>

  <delete id="deleteTeacherById" parameterType="java.lang.Long">
    DELETE
    FROM teachers
    WHERE id = #{id}
  </delete>

  <select id="existsById" resultType="boolean" parameterType="java.lang.Long">
    SELECT EXISTS
    (SELECT 1 FROM teachers
    WHERE id = #{id})
  </select>

</mapper>
